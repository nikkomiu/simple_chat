= form_for @folder, url: team_folder_path(@team.path, @folder.path) do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title.pull-left
        Edit Folder
      = link_to team_folder_path(@team.path, @folder.path), class: 'btn btn-xs btn-danger-outline pull-right', data: { confirm: 'Are you sure you want to delete this folder?', method: :delete } do
        .glyphicon.glyphicon-remove
        Delete
      .clearfix
    .panel-body
      = render 'form', f: f
    .panel-footer
      = f.submit 'Update', class: 'btn btn-primary pull-right'
      = link_to 'Back', team_folder_path(@team.path, @folder.path), class: 'btn btn-default pull-left'
      .clearfix
